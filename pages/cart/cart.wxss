.tag {
    font-size: 20rpx;
    padding: 6rpx 20rpx;
    border-radius: 50%;
    background: #0a3d91;
    color: #fff;
}
/* 设置清空按钮样式 */
.tag1 {
    font-size: 25rpx;
    padding: 6rpx 12rpx;
    border-radius: 50%;
    margin-right: 20px;
    background: #0a3d91;
    color: #f3f4f6;
}
/* 设置删除按钮样式 */
.tag2 {
    font-size: 20rpx;
    padding: 6rpx 12rpx;
    border-radius: 50%;
    border: 1px solid#90a4ae;
    background: #fff;
    color: #000;
}
