/* pages/edit-profile/edit-profile.wxss */
.page-container {
    padding: 15px;
    background-color: #f5f7fa;
    min-height: 100vh;
  }
  
  .form-card {
    background-color: white;
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 15px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .card-title {
    font-size: 16px;
    font-weight: 500;
    color: #1D2129;
    margin-bottom: 16px;
  }
  
  .form-item {
    margin-bottom: 16px;
  }
  
  .form-label {
    font-size: 14px;
    color: #4E5969;
    display: block;
    margin-bottom: 8px;
  }
  
  .input-container {
    position: relative;
  }
  
  .form-input {
    width: 100%;
    height: 40px;
    padding: 0 12px;
    border: 1px solid #E5E6EB;
    border-radius: 6px;
    font-size: 14px;
    padding-right: 36px; /* 为图标留出空间 */
  }
  
  .input-icon {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
  }
  
  .error-text {
    font-size: 12px;
    color: #F53F3F;
    margin-top: 4px;
    display: block;
  }
  
  .form-buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 24px;
  }
  
  .cancel-btn, .submit-btn {
    height: 44px;
    line-height: 44px;
    border-radius: 6px;
    font-size: 15px;
    flex: 1;
  }
  
  .cancel-btn {
    background-color: white;
    color: #4E5969;
    border: 1px solid #E5E6EB;
    margin-right: 12px;
  }
  
  .submit-btn {
    background-color: #0A3D91;
    color: white;
    border: none;
  }
  
  button::after {
    border: none;
  }