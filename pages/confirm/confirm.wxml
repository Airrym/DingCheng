<view class="container" style="padding:24rpx 24rpx 24rpx;">
  <view class="card" style="margin-bottom:24rpx;">
    <text style="font-weight:700;color:var(--primary);">确认订单</text>
    <view class="divider"/>
    <view>
      <view class="row"><text class="muted">姓名：</text><text>{{info.name}}</text></view>
      <view class="row"><text class="muted">邮箱：</text><text>{{info.email}}</text></view>
      <view class="row"><text class="muted">收货地址：</text><text>{{info.address}}</text></view>
      <view class="row"><text class="muted">最近航次：</text><text>{{info.voyage}}</text></view>
      <view class="row"><text class="muted">期望收货时间：</text><text>{{displayTime}}</text></view>
    </view>
  </view>

  <view class="card" style="margin-bottom:24rpx;">
    <text style="font-weight:600;">订单明细</text>
    <view class="divider"/>
    <block wx:for="{{items}}" wx:key="id">
      <view class="row" style="padding:16rpx 0;">
        <text>{{item.name}} x{{item.quantity}}</text>
        <text style="color:var(--primary);">¥{{item.price*item.quantity}}</text>
      </view>
    </block>
    <view class="divider"/>
    <view class="row">
      <text>总计：</text>
      <text style="color:var(--primary);font-weight:700;">¥{{total}}</text>
    </view>
  </view>

  <button class="btn btn-secondary" bindtap="submit">确认提交</button>
</view>