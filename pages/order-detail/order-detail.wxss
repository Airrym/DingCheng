/* pages/order-detail/order-detail.wxss */
.page-container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .header {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    margin-bottom: 30rpx;
  }
  
  .back-btn image {
    width: 40rpx;
    height: 40rpx;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    margin-left: 20rpx;
  }
  
  .order-card {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .order-header {
    display: flex;
    flex-direction: column;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .order-number {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .order-date {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 10rpx;
  }
  
  .order-status {
    align-self: flex-start;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  .section-title {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    margin: 30rpx 0 20rpx;
    color: #333;
  }
  
  .product-list {
    margin-bottom: 30rpx;
  }
  
  .product-item {
    display: flex;
    justify-content: space-between;
    padding: 15rpx 0;
    border-bottom: 1rpx dashed #eee;
  }
  
  .address-info {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    background-color: #f9f9f9;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
  }
  
  .address-info text {
    margin-bottom: 10rpx;
  }
  
  .order-summary {
    border-top: 1rpx solid #eee;
    padding-top: 20rpx;
  }
  
  .summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15rpx;
  }
  
  .summary-row.total {
    font-weight: bold;
    font-size: 32rpx;
    color: #e74c3c;
  }
  
  .action-buttons {
    display: flex;
    justify-content: space-around;
    margin-top: 40rpx;
  }
  
  .btn {
    flex: 1;
    margin: 0 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    font-size: 28rpx;
  }
  
  .review-btn {
    background-color: #3498db;
    color: white;
  }
  
  /* 状态颜色 */
  .bg-yellow-100 {
    background-color: #fef9c3;
    color: #d97706;
  }
  
  .bg-green-100 {
    background-color: #dcfce7;
    color: #16a34a;
  }
  
  .bg-neutral-100 {
    background-color: #f5f5f5;
    color: #737373;
  }