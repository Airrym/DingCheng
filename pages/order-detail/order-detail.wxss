.container {
    padding: 20rpx;
    background-color: #f5f7fa;
    min-height: 100vh;
  }
  
  .card {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.05);
  }
  
  .flex-between {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  
  .mb-20 {
    margin-bottom: 20rpx;
  }
  
  .order-number {
    font-size: 32rpx;
    font-weight: bold;
    color: #1d2129;
  }
  
  .order-date {
    font-size: 24rpx;
    color: #86909c;
    display: block;
    margin-top: 10rpx;
  }
  
  .status-badge {
    font-size: 24rpx;
    padding: 8rpx 16rpx;
    border-radius: 100rpx;
  }
  
  .grid-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20rpx;
  }
  
  .label {
    font-size: 24rpx;
    color: #86909c;
    margin-right: 10rpx;
  }
  
  .price {
    color: #0A3D91;
    font-weight: bold;
    font-size: 32rpx;
  }
  
  .section-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #1d2129;
    margin-bottom: 30rpx;
  }
  
  .info-item {
    font-size: 24rpx;
    margin-bottom: 20rpx;
  }
  
  .product-list {
    max-height: 400rpx;
    overflow-y: auto;
  }
  
  .product-item {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #e5e6eb;
  }
  
  .product-item:last-child {
    border-bottom: none;
  }
  
  .product-name {
    font-size: 24rpx;
    font-weight: 500;
  }
  
  .product-unit {
    font-size: 22rpx;
    color: #86909c;
    display: block;
    margin-top: 10rpx;
  }
  
  .product-price {
    color: #0A3D91;
    font-weight: 500;
  }
  
  .timeline {
    position: relative;
    padding-left: 60rpx;
  }
  
  .timeline-line {
    position: absolute;
    left: 30rpx;
    top: 40rpx;
    bottom: 0;
    width: 2rpx;
    background-color: #e5e6eb;
    z-index: 0;
  }
  
  .timeline-item {
    position: relative;
    margin-bottom: 40rpx;
  }
  
  .timeline-item:last-child {
    margin-bottom: 0;
  }
  
  .timeline-item.active .timeline-dot {
    background-color: #0A3D91;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .timeline-item.active .timeline-status {
    color: #0A3D91;
  }
  
  .timeline-dot {
    position: absolute;
    left: -50rpx;
    top: 0;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: #e5e6eb;
    z-index: 1;
  }
  
  .timeline-content {
    margin-left: 20rpx;
  }
  
  .timeline-status {
    font-size: 24rpx;
    font-weight: 500;
  }
  
  .timeline-time {
    font-size: 22rpx;
    color: #86909c;
    display: block;
    margin-top: 10rpx;
  }
  
  .action-buttons {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-top: 20rpx;
  }
  
  .action-btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 500;
    margin-bottom: 20rpx;
    border: 1px solid#f76e6e;
    transition: all 0.3s ease;
  }
  
  .action-btn:last-child {
    margin-bottom: 0;
  }
  
  .action-btn:hover {
    transform: translateY(-4rpx);
    border: none;
  }
  
  /* 状态颜色 */
  .bg-yellow-100 {
    background-color: #fefce8;
  }
  
  .text-yellow-600 {
    color: #ca8a04;
  }
  
  .bg-green-100 {
    background-color: #dcfce7;
  }
  
  .text-green-600 {
    color: #16a34a;
  }
  
  .bg-neutral-100 {
    background-color: #f5f5f5;
  }
  
  .text-neutral-500 {
    color: #737373;
  }
  
  .bg-white {
    background-color: #fff;
  }
  
  .border-danger {
    border-color: #f87777;
  }
  
  .text-danger {
    color: #F53F3F;
  }
  
  .border-primary {
    border-color: #0A3D91;
  }
  
  .text-primary {
    color: #0A3D91;
  }
  
  .bg-primary {
    background-color: #0A3D91;
    color: #fff;
    border: none;
  }