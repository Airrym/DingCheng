<view class="container">
  <!-- 显示区域 -->
  <view class="display">{{ result }}</view>

  <!-- 按钮区域 -->
  <view class="buttons">
    <button class="btn" bindtap="clear">C</button>
    <button class="btn" bindtap="input" data-val="/">÷</button>
    <button class="btn" bindtap="input" data-val="*">×</button>
    <button class="btn" bindtap="input" data-val="-">-</button>

    <button class="btn" bindtap="input" data-val="7">7</button>
    <button class="btn" bindtap="input" data-val="8">8</button>
    <button class="btn" bindtap="input" data-val="9">9</button>
    <button class="btn" bindtap="input" data-val="+">+</button>

    <button class="btn" bindtap="input" data-val="4">4</button>
    <button class="btn" bindtap="input" data-val="5">5</button>
    <button class="btn" bindtap="input" data-val="6">6</button>
    <button class="btn big" bindtap="calculate">=</button>

    <button class="btn" bindtap="input" data-val="1">1</button>
    <button class="btn" bindtap="input" data-val="2">2</button>
    <button class="btn" bindtap="input" data-val="3">3</button>
    <button class="btn" bindtap="input" data-val="0">0</button>

    <button class="btn wide" bindtap="input" data-val=".">.</button>
  </view>
</view>
