.container {
  padding: 20rpx;
}
.display {
  height: 150rpx;
  line-height: 150rpx;
  font-size: 50rpx;
  text-align: right;
  background: #f0f0f0;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
}
.buttons {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10rpx;
}
.btn {
  height: 100rpx;
  font-size: 40rpx;
  background: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.1);
}
.btn:active {
  background: #f1f1f1;
}
.big {
  grid-row: span 2;
  background: #ff9800;
  color: #fff;
}
.wide {
  grid-column: span 2;
}
